{
  "name": "discord-bot",
  "version": "1.0.0",
  "author": "Kevin Novak",
  "description": "A discord.js bot template written with TypeScript",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">=18.0.0"
  },
  "type": "module",
  "exports": [
    "./dist/start-bot.js",
    "./dist/start-manager.js"
  ],
  "scripts": {
    "lint": "eslint . --cache --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --fix --cache --ext .js,.jsx,.ts,.tsx",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "clean": "git clean -xdf --exclude=\"/config/**/*\"",
    "clean:dry": "git clean -xdf --exclude=\"/config/**/*\" --dry-run",
    "prepare-config": "dotenv -e ../../.env -e .env -- envsubst < ./config/config.example.json > ./config/config.json",
    "prepare-bot-sites": "dotenv -e ../../.env -e .env -- envsubst < ./config/bot-sites.example.json > ./config/bot-sites.json",
    "prepare-debug": "dotenv -e ../../.env -e .env -- envsubst < ./config/debug.example.json > ./config/debug.json",
    "prepare-discord": "pnpm run prepare-config && pnpm run prepare-bot-sites && pnpm run prepare-debug",
    "build": "pnpm run prepare-discord && tsc --project tsconfig.json",
    "check-types": "tsc --noEmit",
    "commands:view": "node --enable-source-maps dist/start-bot.js commands view",
    "commands:register": "node --enable-source-maps dist/start-bot.js commands register",
    "commands:rename": "node --enable-source-maps dist/start-bot.js commands rename",
    "commands:delete": "node --enable-source-maps dist/start-bot.js commands delete",
    "commands:clear": "node --enable-source-maps dist/start-bot.js commands clear",
    "dev": "pnpm run start-dev:bot",
    "start": "pnpm run start:bot",
    "start-dev:bot": "pnpm run prepare-discord && nodemon --exec tsx src/start-bot.ts",
    "start:bot": "pnpm run prepare-discord && node --enable-source-maps dist/start-bot.js",
    "start:manager": "node --enable-source-maps dist/start-manager.js",
    "start:pm2": "pnpm run pm2:start",
    "pm2:start": "pm2 start process.json",
    "pm2:stop": "pm2 stop process.json",
    "pm2:delete": "pm2 delete process.json"
  },
  "dependencies": {
    "@discordjs/rest": "2.4.0",
    "body-parser": "^1.20.3",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.1",
    "cron-parser": "^4.9.0",
    "discord.js": "14.16.3",
    "discord.js-rate-limiter": "1.3.2",
    "dotenv": "^16.4.5",
    "express": "4.21.2",
    "express-promise-router": "4.1.1",
    "filesize": "10.1.6",
    "linguini": "1.3.1",
    "luxon": "3.5.0",
    "node-fetch": "3.3.2",
    "node-schedule": "2.1.1",
    "pino": "9.6.0",
    "pino-pretty": "13.0.0",
    "pm2": "^5.4.3",
    "reflect-metadata": "^0.2.2",
    "remove-markdown": "0.6.0"
  },
  "devDependencies": {
    "@packages/eslint-config": "workspace:*",
    "@packages/typescript-config": "workspace:*",
    "@types/express": "4.17.21",
    "@types/luxon": "3.4.2",
    "@types/node": "^22.13.4",
    "@types/node-schedule": "2.1.7",
    "@types/pg": "^8.11.2",
    "@types/remove-markdown": "0.3.4",
    "@typescript-eslint/eslint-plugin": "^8.24.1",
    "@typescript-eslint/parser": "^8.24.1",
    "dotenv-cli": "^8.0.0",
    "eslint": "^9.20.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-unicorn": "^57.0.0",
    "nodemon": "^3.1.9",
    "prettier": "^3.5.1",
    "typescript": "^5.7.3"
  }
}
